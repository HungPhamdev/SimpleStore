@page "/changepass/{id}"
@using ASM.Share.Models
@using System.Web;
@inject ASM.Share.Models.INguoidungSvc _nguoidungSvc
@inject NavigationManager navigation


<h3 class="h2 text-info font-weight-bold"><i class="fas fa-user-plus"></i> Đổi mật khẩu người dùng</h3>
<div class="row">
    <div class="col-md-4">
        <EditForm Model="@nguoidung" OnValidSubmit="@SubmitForm">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label class="control-label">Email</label>
                <input @bind="nguoidung.Email" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label for="nguoidung.Password" class="control-label">Mật khẩu cũ</label>
                <input type="password" @bind="nguoidung.Password" class="form-control" />
                <ValidationMessage For="@(()=>nguoidung.Password)" />
            </div>
            <div class="form-group">
                <label for="nguoidung.Password" class="control-label">Mật khẩu mới</label>
                <input type="password" @bind="nguoidung.Password" class="form-control" />
                <ValidationMessage For="@(()=>nguoidung.Password)" />
            </div>
            <div class="form-group">
                <label for="nguoidung.ConfirmPassword" class="control-label">Nhập lại mật khẩu mới</label>
                <input type="password" @bind="nguoidung.ConfirmPassword" class="form-control" />
                <ValidationMessage For="@(()=>nguoidung.ConfirmPassword)" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning font-weight-bold text-success"><i class="fas fa-save"></i> Lưu</button>
                <button type="submit" class="btn btn-info font-weight-bold" @onclick="@Cancel"><i class="fas fa-arrow-circle-left"></i> Thoát</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public string id { get; set; }
    public string email { get; set; }
    public string passOld { get; set; }

    private ASM.Share.Models.Nguoidung nguoidung { get; set; }
    private string check = "";

    protected override void OnInitialized()
    {
    }

    private void SubmitForm()
    {

        navigation.NavigateTo("NguoidungList");
    }

    private void Cancel()
    {
        navigation.NavigateTo("NguoidungList", true);
    }

}
